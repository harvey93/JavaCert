package ch8;
import java.util.*;

public class TowersOfHanoi {
	
	Tower t1;
	Tower t2;
	Tower t3;
	
	public TowersOfHanoi(int n){
		
	}
	
	public void buildTowers(int n){
		t1 = new Tower();
		t2 = new Tower();
		t3 = new Tower();
		
		while(n > 0){
			new Disk
			n--;
		}
	}
}

class Tower{
	Stack<Disk> stack = new Stack<>();
	
	public Disk get(){
		return stack.pop();
	}
	
	public void add(Disk disk){
		stack.push(disk);
	}
}

class Disk{

	int size;
	public Disk(int size){
		this.size = size;
	}
}
