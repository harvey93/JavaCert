package aAProbs;
import java.util.*;

public class ThirdGreatest {
	
	public static int getThird(ArrayList<Integer> arr){
		Integer first = null;
		Integer second = arr.get(1);
		Integer third = arr.get(2);
		for(int i = 3; i < arr.size(); i++) {
			int current = arr.get(i);
			if(first == null || current > first){
				third = second;
				second = first;
				first = current;
			}else if(second == null || current > second) {
				third = second;
				second = current;
			} else if (third == null || current > third) {
				third = current;
			}
		}

		return third;
	}
	
}
