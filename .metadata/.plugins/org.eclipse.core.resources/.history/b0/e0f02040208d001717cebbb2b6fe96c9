package ch8;

public class BooleanEvaluation {
	
	public static int evaluate(String s, boolean result){
		if(s.length() == 0){
			return 0;
		}
		
		if(s.length() == 1){
			return evalString(s) == result ? 1 : 0;
		}
	}
	
	public static boolean evalString(String s){
		return s.equals("1") ? true : false;
	}

}
