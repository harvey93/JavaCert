package concurrency;

public class Race {
	
	Runner winner;
	public void start(Runner runner){
		try{
			Thread.sleep(500);
		}catch(InterruptedException e){
			System.out.println(e.getMessage());
		}
		
		
		System.out.println(winner);
		if(winner == null){
			System.out.println(runner.name);
			winner = runner;
		}
		
	}
}
