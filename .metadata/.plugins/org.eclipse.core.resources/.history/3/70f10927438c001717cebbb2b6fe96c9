package ch8;

public class Coins {

	
	public static int makeChange(int amt){
		int denoms[] = {25, 10, 5, 1};
		return makeChange(amt, 0);
	}
	
	public static int makeChange(int amt, int current){
		if(current == amt){
			return 1;
		}
		
		if(current < amt){
			return 0;
		}
		
		int ways = 0;
		
		ways += makeChange(amt, current + 1);
		ways += makeChange(amt, current + 5);
		ways += makeChange(amt, current + 10);
		ways += makeChange(amt, current + 25);
		
		return ways;
	}
	
