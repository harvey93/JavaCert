package ch5;

public class BinaryToString {
	
	public static String bToString(int n){
		String s = "";
		while(n > 0){
			if(n % 2 == 0){
				s = "0" + s;
			}else {
				s = "1" + s;
			}
			n = n /2;
		}
		return s;
	}
	
	public static String decToBinaryString(double num){
		StringBuilder sb = new StringBuilder(".");
		while(num > 0){
			if(sb.length() > 32){
				System.out.println(sb);
				return "ERROR";
			}
			double r = 2 * num;
			if(r >= 1){
				System.out.println(num);
				sb.append(1);
				num = r - 1;
			}else {
				sb.append(0);
				num = r;
			}
			
		
		}
		return sb.toString();
		
	}

}
