package ch5;

public class BinaryToString {
	
	public static String bToString(int n){
		String s = "";
		while(n > 0){
			if(n % 2 == 0){
				s = "0" + s;
			}else {
				s = "1" + s;
			}
			n = n /2;
		}
		return s;
	}
	
	public static String decToBinaryString(double n){
		StringBuilder sb = new StringBuilder(".");
		while(n > 0){
			
		}
		return sb.toString();
		
	}

}
